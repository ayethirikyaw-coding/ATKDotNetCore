@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}
<h2>Blog List</h2>
@* <span>@Model.Count</span> *@

<a href="/BlogAjax/Create" class="btn btn-success">New</a>

<table class="table table-responsive">
    <thead>
        <tr>
            <th></th>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach(BlogModel item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="/BlogAjax/Edit/@item.BlogId">Edit</a>
                    <button type="button" class="btn btn-danger btn-delete" data-id="@item.BlogId">Delete</button>
                    @* Controller/action/id *@
                    @* <a href="/Blog/Edit?id=@item.BlogId&name="></a> *@
                </td>
                <td>@(++count)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        } 
    </tbody>
</table>

@section scripts {
    <script>
        $('.btn-delete').click(function () {
            let itemId = $(this).data('id');

            Swal.fire({
                title: "Confirm",
                text: "Are you sure to delete?",
                icon: "question",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteBlog(itemId);
                }
            })
        });
            
        function deleteBlog(id){
            const _reqModel = {
                BlogId: id
            };

            $.ajax({
                url: "/BlogAjax/Delete",
                data: { blog: _reqModel },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    if (result.IsSuccess) {
                        Swal.fire({
                            title: "Success",
                            text: result.Message,
                            icon: "success"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.href = "/BlogAjax";
                            }
                        });
                    } else {
                        Swal.fire({
                            title: "Error!",
                            text: result.Message,
                            icon: "error"
                        });
                    }
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                }
            });
        }  
    </script>
}

