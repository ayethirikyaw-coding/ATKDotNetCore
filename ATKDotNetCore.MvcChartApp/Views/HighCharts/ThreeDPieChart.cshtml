@model ThreeDPieChartModel

<div id="container"></div>

@section scripts {
    <script>
        const _data = @Html.Raw(JsonConvert.SerializeObject(Model.Datas));

        function hasProperty(array) {
            for (let i = 0; i < array.length; i++) {
                if (array[i].hasOwnProperty("Selected")) {
                    const selected = {
                        name: array[i].Name,
                        y: array[i].Y,
                        sliced: array[i].Sliced,
                        selected: array[i].Selected
                    }
                    return selected;
                }
            }
        }

        const selectedPie = hasProperty(_data);
        const threeDPie = [];
        const unselectedPie = _data.filter(data => data.Name != selectedPie.name);
        unselectedPie.map(data => threeDPie.push(Object.values(data)));
        threeDPie.splice(2, 0, selectedPie);
        
        Highcharts.chart('container', {
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: 'Global smartphone shipments market share, Q1 2022',
                align: 'left'
            },
            subtitle: {
                text: 'Source: ' +
                    '<a href="https://www.counterpointresearch.com/global-smartphone-share/"' +
                    'target="_blank">Counterpoint Research</a>',
                align: 'left'
            },
            accessibility: {
                point: {
                    valueSuffix: '%'
                }
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    depth: 35,
                    dataLabels: {
                        enabled: true,
                        format: '{point.name}'
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'Share',
                data: threeDPie
            }]
        });
    </script>
}