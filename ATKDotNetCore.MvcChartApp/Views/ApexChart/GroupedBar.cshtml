 @model GroupedBarModel

<div id="chart"></div>
 
 @section scripts{
    <script>

        // const data = [{
        //     data: [44, 55, 41, 64, 22, 43, 21]
        // }, {
        //     data: [53, 32, 33, 52, 13, 44, 32]
        // }];

        const _data = @Html.Raw(JsonConvert.SerializeObject(Model.BarGroup));
        const _categories = @Html.Raw(JsonConvert.SerializeObject(Model.Categories));

        var options = {
            series: _data,
            chart: {
                type: 'bar',
                height: 430
            },
            plotOptions: {
                bar: {
                    horizontal: true,
                    dataLabels: {
                        position: 'top',
                    },
                }
            },
            dataLabels: {
                enabled: true,
                offsetX: -6,
                style: {
                    fontSize: '12px',
                    colors: ['#fff']
                }
            },
            stroke: {
                show: true,
                width: 1,
                colors: ['#fff']
            },
            tooltip: {
                shared: true,
                intersect: false
            },
            xaxis: {
                categories: _categories,
            },
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();

    </script>
 }
    