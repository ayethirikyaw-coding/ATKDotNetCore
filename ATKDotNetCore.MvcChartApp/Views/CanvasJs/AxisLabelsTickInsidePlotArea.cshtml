@model AxisLabelsTickInsidePlotAreaModel

<div id="chartContainer" style="height: 300px; width: 100%;"></div>

@section scripts {
    <script>
        const dataPointsList = @Html.Raw(JsonConvert.SerializeObject(Model.DataPoints));
        const _dataPoints = dataPointsList.map(x => ({
            label: x.Label,
            y: x.Y
        })
        );
        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "dark2", // "light1", "light2", "dark1"
                animationEnabled: true,
                exportEnabled: true,
                title: {
                    text: "Top 10 Most Viewed YouTube Videos"
                },
                axisX: {
                    margin: 10,
                    labelPlacement: "inside",
                    tickPlacement: "inside"
                },
                axisY2: {
                    title: "Views (in billion)",
                    titleFontSize: 14,
                    includeZero: true,
                    suffix: "bn"
                },
                data: [{
                    type: "bar",
                    yValueFormatString: "#,###.##bn",
                    indexLabel: "{y}",
                    axisYType: "secondary",
                    dataPoints: _dataPoints
                }]
            });
            chart.render();
        }
    </script>
}

